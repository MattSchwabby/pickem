<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Comment to <%= pool.name %> </h1>
        <div style="width: 30%; margin: 65px auto;">
            <form action="/pools/<%= pool.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Enter your comment"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/pools">Return to Pools</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>