<% include ./partials/header %>

<div class="row text-left">
    <form class="form-horizontal" action="/login" method="POST">
        <legend>Log in to Wiseguy</legend>

            <div class="form-group">
                <label class="col-md-4 control-label" for="username">E-mail address</label>
                <div class="col-md-4">
                    <input id="textinput" class="form-control input-md" required type="text" name="username" placeholder="Please enter your email address"></input>
                </div>
            </div>            
            <div class="form-group">
                <label class="col-md-4 control-label" for="password">Password</label>
                <div class="col-md-4">
                    <input id="textinput" class="form-control input-md" type="password" name="password" placeholder="Password"></input>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block"><i class="icon-users"></i> Log in</button>
                </div>
            </div>
    </form>
</div>

<% include ./partials/footer %>