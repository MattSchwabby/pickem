<% include ../partials/header %>

<div class="row text-left">

        <p class="lead">Edit profile: <%=currentUser.name%></p>
        <form class="form-horizontal" action="/users/<%= currentUser._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Name</label>
                <div class="col-md-4">
                    <input id="textinput" class="form-control input-md" required type="text" name="name" value="<%=currentUser.name%>" placeholder="<%=currentUser.name%>"></input>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="image">Profile picture URL</label>
                <div class="col-md-4">
                    <input id="textinput" class="form-control input-md" required type="text" name="image" value="<%=currentUser.image%>" placeholder="<%=currentUser.image%>"></input>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block"><i class="icon-user-plus"></i> Submit</button>
                </div>
            </div>
        </form>
   
</div>

<% include ../partials/footer %>