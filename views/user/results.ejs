<% include ../partials/header %>

<div class="row text-left"></div>
    <div class="col-xs-12 text-center">
        <%
        results.forEach(function(result)
        { %>
            <a href="/users/<%= result._id %>">
            <div class="searchResult">
                <img src="<%=result.image%>">
                <div id="resultText">
                <p class="lead">User name: <%=result.name%></p>
                <%
                if(result.stats.totalPicks)
                { %>
                    
                        <p>Total picks: <%=result.stats.totalPicks%></p>
                        <p>Lifetime correct picks: <%=result.stats.correctPicks%></p>
                        <p>Lifetime correct picks against the spread: <%=result.stats.correctSpreadPicks%></p>
                        <p>Participated in <%=result.stats.totalPools%> pools</p>
                    </div>
                <%
                } 
                else
                { %>
                    <p><%=result.username%> has not made any picks.</p>
                    </div>
                <%
                } %>
            </div> <!-- end .searchResult -->
            </a>
    <%  }) %>

    </div> <!-- end col -->
</div><!-- end row -->


<% include ../partials/footer %>